#! /bin/bash

while read -r local_ref __local_sha1 remote_ref __remote_sha1; do
    TEST_BRANCH="test/$(basename "${remote_ref}")"

    git switch "${TEST_BRANCH}" || git switch -c "${TEST_BRANCH}"
    git pull
    got merge "${local_ref}"

    git push --no-verify --force

    git switch "${local_ref}"
done
